extend layout

block content
    .breadcumb-area.navBar_bg
        .container.h-100
            .row.h-100.align-items-end
                .col-12
                    .breadcumb--con
                        h2.title Project
                        nav(aria-label='breadcrumb')
                            ol.breadcrumb
                                li.breadcrumb-item
                                    a(href='#')
                                    i.fa.fa-home
                                    |  Home
                                li.breadcrumb-item.active(aria-current='page') Project
    // ***** Breadcrumb Area End *****
    // ***** Mona Projects Area Start *****
    section.mona-projects-area.section-padding-80-0.mb-50
        .container
            .row.mona-portfolio
                each val in data
                    // Single Projects Item
                    .col-12.col-sm-6.col-lg-3.single_gallery_item.mb-30
                        .single-project-area
                            img(src=val.src, alt='')
                            // Hover Content
                            .hover-content.d-flex.align-items-center
                                .hover-text
                                    h4 #{val.h4}
                                    h6 #{val.h6[0]}
                                    h6 #{val.h6[1]}
                                    h6 #{val.h6[2]}
                